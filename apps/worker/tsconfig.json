{
  "extends": "../../base.tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@seo-agent/platform": ["../../packages/platform/src/index.ts"],
      "@seo-agent/platform/*": ["../../packages/platform/src/*"],
      "@seo-agent/cms": ["../../packages/cms/src/index.ts"],
      "@seo-agent/cms/*": ["../../packages/cms/src/*"],
      "@seo-agent/integrations": ["../../packages/integrations/src/index.ts"],
      "@seo-agent/integrations/*": ["../../packages/integrations/src/*"]
    }
  },
  "include": [
    "src",
    "../../packages/platform/src/**/*",
    "../../packages/cms/src/**/*",
    "../../packages/integrations/src/**/*"
  ]
}
