{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"],
      "@seo-agent/domain": ["../../packages/domain/src/index.ts"],
      "@seo-agent/db": ["../../packages/db/src/index.ts"],
      "@seo-agent/queue": ["../../packages/queue/src/index.ts"],
      "@seo-agent/sdk": ["../../packages/sdk/src/index.ts"],
      "@seo-agent/auth": ["../../packages/auth/src/index.ts"],
      "@seo-agent/platform": ["../../packages/platform/src/index.ts"],
      "@seo-agent/platform/*": ["../../packages/platform/src/*"],
      "@seo-agent/cms": ["../../packages/cms/src/index.ts"],
      "@seo-agent/cms/*": ["../../packages/cms/src/*"]
    }
  },
  "include": [
    "src",
    "src/types/**/*.d.ts",
    "vite-env.d.ts",
    "tanstack.config.ts",
    "../../packages/domain/src/**/*",
    "../../packages/db/src/**/*",
    "../../packages/queue/src/**/*",
    "../../packages/sdk/src/**/*",
    "../../packages/auth/src/**/*",
    "../../packages/platform/src/**/*",
    "../../packages/cms/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
